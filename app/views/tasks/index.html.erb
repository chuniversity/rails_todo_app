<h1>Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr class='task <%= "completed" if task.completed? %>'>
        <td><%= task.description %></td>
        <td>
          <div class="btn-group float-right" role="group">
            <%= form_with(url: "/tasks/#{task.id}", method: :patch) do |form| %>
              <%= form.submit task.completed? ? "Mark Incomplete" : "Mark Complete",
                  class: "btn btn-secondary" %>
            <% end %>
            <%= form_with(url: "/tasks/#{task.id}", method: :delete) do |form| %>
              <%= form.submit "Delete", data: { confirm: "Are you sure?" }, class: "btn btn-danger ml-2" %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= form_with(url: "/tasks") do |form| %>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, autocomplete: "off", class: "form-control" %>
  </div>
  <%= form.submit "Create Task", class: "btn btn-primary" %>
<% end %>
